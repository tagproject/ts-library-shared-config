{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": ["--experimental-vm-modules"],
      "args": ["--i", "--runInBand", "--coverage", "false", "${relativeFile}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
